<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>ca.uhn.hapi</groupId>
    <artifactId>org.motechproject.com.ca.uhn.hapi</artifactId>
    <version>0.5.0</version>
    <packaging>bundle</packaging>
    <name>HAPI</name>
    <description>A library implementing the HL7 api</description>

    <properties>
        <modules.root.dir>${basedir}/../..</modules.root.dir>
    </properties>

    <repositories>
        <repository>
            <id>1motech-repo</id>
            <name>1MOTECH Maven Repository</name>
            <url>http://repo.springsource.org/libs-milestone/</url>
        </repository>
        <repository>
            <id>motech-repo</id>
            <name>MOTECH Maven Repository</name>
            <url>http://nexus.motechproject.org/content/repositories/public</url>
        </repository>
        <repository>
            <id>com.springsource.repository.bundles.release</id>
            <name>SpringSource Enterprise Bundle Repository - SpringSource Bundle Releases</name>
            <url>http://repository.springsource.com/maven/bundles/release</url>
        </repository>
        <repository>
            <id>com.springsource.repository.bundles.external</id>
            <name>SpringSource Enterprise Bundle Repository - External Bundle Releases</name>
            <url>http://repository.springsource.com/maven/bundles/external</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>ca.uhn.hapi</groupId>
            <artifactId>hapi</artifactId>
            <version>0.5</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>com.springsource.org.apache.commons.logging</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.jdom</groupId>
            <artifactId>com.springsource.org.jdom</artifactId>
            <version>1.1.0</version>
        </dependency>
        <dependency>
            <groupId>com.thoughtworks.xstream</groupId>
            <artifactId>org.motechproject.com.thoughtworks.xstream</artifactId>
            <version>1.4.2</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.4</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>
                            ca.uhn.hl7v2;version=${project.version},
                            ca.uhn.hl7v2.app;version=${project.version},
                            ca.uhn.hl7v2.conf;version=${project.version},
                            ca.uhn.hl7v2.conf.classes.abs;version=${project.version},
                            ca.uhn.hl7v2.conf.classes.exceptions;version=${project.version},
                            ca.uhn.hl7v2.conf.classes.generator.builders;version=${project.version},
                            ca.uhn.hl7v2.conf.classes.generator.genclasses;version=${project.version},
                            ca.uhn.hl7v2.conf.parser;version=${project.version},
                            ca.uhn.hl7v2.conf.spec;version=${project.version},
                            ca.uhn.hl7v2.conf.spec.message;version=${project.version},
                            ca.uhn.hl7v2.conf.spec.usecase;version=${project.version},
                            ca.uhn.hl7v2.conf.store;version=${project.version},
                            ca.uhn.hl7v2.llp;version=${project.version},
                            ca.uhn.hl7v2.model;version=${project.version},
                            ca.uhn.hl7v2.model.primitive;version=${project.version},
                            ca.uhn.hl7v2.model.v21.datatype;version=${project.version},
                            ca.uhn.hl7v2.model.v21.group;version=${project.version},
                            ca.uhn.hl7v2.model.v21.message;version=${project.version},
                            ca.uhn.hl7v2.model.v21.segment;version=${project.version},
                            ca.uhn.hl7v2.model.v22.datatype;version=${project.version},
                            ca.uhn.hl7v2.model.v22.group;version=${project.version},
                            ca.uhn.hl7v2.model.v22.message;version=${project.version},
                            ca.uhn.hl7v2.model.v22.segment;version=${project.version},
                            ca.uhn.hl7v2.model.v23.datatype;version=${project.version},
                            ca.uhn.hl7v2.model.v23.group;version=${project.version},
                            ca.uhn.hl7v2.model.v23.message;version=${project.version},
                            ca.uhn.hl7v2.model.v23.segment;version=${project.version},
                            ca.uhn.hl7v2.model.v231.datatype;version=${project.version},
                            ca.uhn.hl7v2.model.v231.group;version=${project.version},
                            ca.uhn.hl7v2.model.v231.message;version=${project.version},
                            ca.uhn.hl7v2.model.v231.segment;version=${project.version},
                            ca.uhn.hl7v2.model.v24.datatype;version=${project.version},
                            ca.uhn.hl7v2.model.v24.group;version=${project.version},
                            ca.uhn.hl7v2.model.v24.message;version=${project.version},
                            ca.uhn.hl7v2.model.v24.segment;version=${project.version},
                            ca.uhn.hl7v2.model.v25.datatype;version=${project.version},
                            ca.uhn.hl7v2.model.v25.group;version=${project.version},
                            ca.uhn.hl7v2.model.v25.message;version=${project.version},
                            ca.uhn.hl7v2.model.v25.segment;version=${project.version},
                            ca.uhn.hl7v2.parser;version=${project.version},
                            ca.uhn.hl7v2.parser.eventmap;version=${project.version},
                            ca.uhn.hl7v2.preparser;version=${project.version},
                            ca.uhn.hl7v2.protocol;version=${project.version},
                            ca.uhn.hl7v2.protocol.impl;version=${project.version},
                            ca.uhn.hl7v2.sourcegen;version=${project.version},
                            ca.uhn.hl7v2.util;version=${project.version},
                            ca.uhn.hl7v2.validation;version=${project.version},
                            ca.uhn.hl7v2.validation.app;version=${project.version},
                            ca.uhn.hl7v2.validation.impl;version=${project.version},
                            ca.uhn.hl7v2.view;version=${project.version},
                            ca.uhn.log;version=${project.version},
                            ca.uhn.sourceheader;version=${project.version}
                        </Export-Package>
                        <Bundle-Vendor>HAPI</Bundle-Vendor>
                        <Bundle-DocURL>http://hl7api.sourceforge.net/</Bundle-DocURL>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Embed-Dependency>hapi;inline=true</Embed-Dependency>
                        <Embed-Transitive>false</Embed-Transitive>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>copy-bundles</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${user.home}/.motech/bundles</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>target</directory>
                                    <includes>
                                        <include>*.jar</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>