<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.quartz-scheduler</groupId>
    <artifactId>org.motechproject.org.quartz-scheduler</artifactId>
    <version>2.1.5</version>
    <packaging>bundle</packaging>
    <name>Quartz Scheduler</name>
    <description>Quartz Enterprise Job Scheduler</description>

    <properties>
        <modules.root.dir>${basedir}/../..</modules.root.dir>
    </properties>

    <repositories>
        <repository>
            <id>com.springsource.repository.bundles.release</id>
            <name>SpringSource Enterprise Bundle Repository - SpringSource Bundle Releases</name>
            <url>http://repository.springsource.com/maven/bundles/release</url>
        </repository>
        <repository>
            <id>com.springsource.repository.bundles.external</id>
            <name>SpringSource Enterprise Bundle Repository - External Bundle Releases</name>
            <url>http://repository.springsource.com/maven/bundles/external</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.quartz-scheduler</groupId>
            <artifactId>quartz</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.mchange.c3p0</groupId>
            <artifactId>com.springsource.com.mchange.v2.c3p0</artifactId>
            <version>0.9.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.log4j</groupId>
            <artifactId>com.springsource.org.apache.log4j</artifactId>
            <version>1.2.16</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-bundles</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>
                                com.springsource.com.mchange.v2.c3p0
                            </includeArtifactIds>
                            <stripVersion>false</stripVersion>
                            <outputDirectory>
                                ${user.home}/.motech/bundles
                            </outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.4</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>
                            org.quartz;version=${project.version},
                            org.quartz.core;version=${project.version},
                            org.quartz.core.jmx;version=${project.version},
                            org.quartz.ee.jta;version=${project.version},
                            org.quartz.ee.servlet;version=${project.version},
                            org.quartz.helpers;version=${project.version},
                            org.quartz.impl;version=${project.version},
                            org.quartz.impl.calendar;version=${project.version},
                            org.quartz.impl.jdbcjobstore;version=${project.version},
                            org.quartz.impl.matchers;version=${project.version},
                            org.quartz.impl.triggers;version=${project.version},
                            org.quartz.jobs;version=${project.version},
                            org.quartz.jobs.ee.ejb;version=${project.version},
                            org.quartz.jobs.ee.jms;version=${project.version},
                            org.quartz.jobs.ee.jmx;version=${project.version},
                            org.quartz.jobs.ee.mail;version=${project.version},
                            org.quartz.listeners;version=${project.version},
                            org.quartz.plugins;version=${project.version},
                            org.quartz.plugins.history;version=${project.version},
                            org.quartz.plugins.management;version=${project.version},
                            org.quartz.plugins.xml;version=${project.version},
                            org.quartz.simpl;version=${project.version},
                            org.quartz.spi;version=${project.version},
                            org.quartz.utils;version=${project.version},
                            org.quartz.utils.counter;version=${project.version},
                            org.quartz.utils.counter.sampled;version=${project.version},
                            org.quartz.xml;version=${project.version}
                        </Export-Package>
                        <Bundle-Vendor>Quartz Scheduler</Bundle-Vendor>
                        <Bundle-DocURL>http://quartz-scheduler.org/</Bundle-DocURL>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Embed-Dependency>quartz;inline=true</Embed-Dependency>
                        <Embed-Transitive>false</Embed-Transitive>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>copy-bundles</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${user.home}/.motech/bundles</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>target</directory>
                                    <includes>
                                        <include>*.jar</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>